@inherits LayoutComponentBase

<div class="min-h-screen bg-background">
    <!-- Top Navigation Bar -->
    <nav class="border-b">
        <div class="max-w-7xl mx-auto px-4">
            <div class="flex h-16 items-center justify-between">
                <div class="flex items-center">
                    <a href="/" class="text-2xl font-bold">
                        FoodOrdering
                    </a>
                </div>

                <div class="hidden md:flex items-center space-x-4">
                    <NavLink href="/" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-muted transition-colors"
                             Match="NavLinkMatch.All">
                        Dashboard
                    </NavLink>
                    <NavLink href="/menu" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-muted transition-colors">
                        Menu
                    </NavLink>
                    <NavLink href="/orders" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-muted transition-colors">
                        Orders
                    </NavLink>
                    <NavLink href="/reports" class="px-3 py-2 rounded-md text-sm font-medium hover:bg-muted transition-colors">
                        Reports
                    </NavLink>
                </div>

                <div class="flex items-center">
                    <button class="p-2 rounded-md hover:bg-muted transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
                             stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" />
                            <circle cx="12" cy="7" r="4" />
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        @Body
    </main>
</div>